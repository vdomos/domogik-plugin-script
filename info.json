{
	"json_version": 2,

	"identity": {
		"author": "vdomos", 
		"author_email": "domos pt vesta at gmail.com", 
		"tags": ["computer"], 
		"dependencies": [],
		"description": "Domogik Plugin for scripts", 
		"domogik_min_version": "0.4.0", 
		"name": "script", 
		"type": "plugin", 
		"version": "0.2"
	}, 

	"products" : [],

	"configuration": [],

	"device_types": {
		"script.action": {
			"id": "script.action",
			"description": "Script to execute a Action", 
			"name": "Script Action",
			"commands": ["cmd_script_action"],
			"sensors": ["sensor_script_action"],
			"parameters": [
				{
					"key": "program",
					"xpl": true,
					"description": "Executable filename, including path, extension and arguments (Specials characters like ‘>’,’<’, ‘|’ are not authorized)",
					"type": "string"
				}
			]
		},
		"script.info_number": {
			"id": "script.info_number",
			"description": "Script to read a Number Sensor", 
			"name": "Script Info Number",
			"commands": ["cmd_script_info_number"],
			"sensors": ["sensor_script_info_number"],
			"parameters": [
				{
					"key": "interval",
					"xpl": false,
					"description": "Interval in seconds between 2 executions of the script (0 = disable automatique execution).",
					"type": "integer",
					"default": "0"
				},
				{
					"key": "program",
					"xpl": true,
					"description": "Executable filename, including path, extension and arguments (Specials characters like ‘>’,’<’, ‘|’ are not authorized)",
					"type": "string"
				}
			]
		},
		"script.info_binary": {
			"id": "script.sensor_binary",
			"description": "Script to read a Binary Sensor", 
			"name": "Script Info Binary",
			"commands": ["cmd_script_info_binary"],
			"sensors": ["sensor_script_info_binary"],
			"parameters": [
				{
					"key": "interval",
					"xpl": false,
					"description": "Interval in seconds between 2 executions of the script (0 = disable automatique execution).",
					"type": "integer",
					"default": "0"
				},
				{
					"key": "program",
					"xpl": true,
					"description": "Executable filename, including path, extension and arguments (Specials characters like ‘>’,’<’, ‘|’ are not authorized)",
					"type": "string"
				}
			]
		}
	},

	"commands": { 
		"cmd_script_action" : {
			"name" : "Cmd script action",
			"return_confirmation" : true,
			"parameters" : [
				{
					"key" : "status",
					"data_type" : "DT_Trigger",
					"conversion" : "from_DT_Trigger_to_start"
				}
			],
			"xpl_command" : "run_script_action"
		},
		"cmd_script_info_number" : {
			"name" : "Cmd script info number",
			"return_confirmation" : true,
			"parameters" : [
				{
					"key" : "status",
					"data_type" : "DT_Trigger",
					"conversion" : "from_DT_Trigger_to_start"
				}
			],
			"xpl_command" : "run_script_info_number"
		},
		"cmd_script_info_binary" : {
			"name" : "Cmd script info binary",
			"return_confirmation" : true,
			"parameters" : [
				{
					"key" : "status",
					"data_type" : "DT_Trigger",
					"conversion" : "from_DT_Trigger_to_start"
				}
			],
			"xpl_command" : "run_script_info_binary"
		}
	},

	"xpl_commands": {
		"run_script_action" : {
			"name": "Run script action",
			"schema": "exec.basic",
			"xplstat_name": "stat_script_action",
			"parameters": {
				"static": [
						{
							"key": "type",
							"value": "cmd_action"
						}
					],
				"device": []
			}
		},
		"run_script_info_number" : {
			"name": "Run script info number",
			"schema": "exec.basic",
			"xplstat_name": "stat_script_info_number",
			"parameters": {
				"static": [
						{
							"key": "type",
							"value": "cmd_info_number"
						}
					],
				"device": []
			}
		},
		"run_script_info_binary" : {
			"name": "Run script info binary",
			"schema": "exec.basic",
			"xplstat_name": "stat_script_info_binary",
			"parameters": {
				"static": [
						{
							"key": "type",
							"value": "cmd_info_binary"
						}
					],
				"device": []
			}
		}		
	}, 

	"xpl_stats": {
		"stat_script_action": {
			"name": "Stat script action",
			"schema": "exec.basic",
			"parameters": {
				"static": [
						{
							"key": "type",
							"value": "cmd_action"
						}
					],
				"device": [],
				"dynamic": [
					{
						 "key": "status",
						 "ignore_values": "",
						 "sensor": "sensor_script_action"
					}
				]
			}
		},
		"stat_script_info_number": {
			"name": "Stat script info number",
			"schema": "exec.basic",
			"parameters": {
				"static": [
						{
							"key": "type",
							"value": "cmd_info_number"
						}
					],
				"device": [],
				"dynamic": [
					{
						 "key": "status",
						 "ignore_values": "",
						 "sensor": "sensor_script_info_number"
					}
				]
			}
		},
		"stat_script_info_binary": {
			"name": "Stat script info binary",
			"schema": "exec.basic",
			"parameters": {
				"static": [
						{
							"key": "type",
							"value": "cmd_info_binary"
						}
					],
				"device": [],
				"dynamic": [
					{
						 "key": "status",
						 "ignore_values": "",
						 "sensor": "sensor_script_info_binary"
					}
				]
			}
		}
	},

	"sensors": {
		"sensor_script_action": {
			"name": "Script Action",
			"incremental" : false,
			"data_type": "DT_Trigger",
			"conversion": "from_executed_to_DT_Trigger",
			"timeout" : 0,
			"history": {
				"store": true,
				"duplicate" : true,
				"max": 0,
				"expire": 0,
				"round_value": 0
			}
		},
		"sensor_script_info_number": {
			"name": "Script InfoNum",
			"incremental" : false,
			"data_type": "DT_Number",
			"conversion": "",
			"timeout" : 0,
			"history": {
				"store": true,
				"duplicate" : true,
				"max": 0,
				"expire": 0,
				"round_value": 0
			}
		},
		"sensor_script_info_binary": {
			"name": "Script InfoBin",
			"incremental" : false,
			"data_type": "DT_Bool",
			"conversion": "",
			"timeout" : 0,
			"history": {
				"store": true,
				"duplicate" : true,
				"max": 0,
				"expire": 0,
				"round_value": 0
			}
		}
	}
}
